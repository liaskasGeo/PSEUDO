акцояихлос monodiastatos
стахеяес
    N=3;
дедолема
    PIN:ARRAY[1..N] OF INTEGER;
    i:INTEGER;
аявг
    циа i:=1 еыс N епамакабе
        тупысе("еИСэЦЕТЕ ТОМ ",i,"o АЯИХЛЭ: ")
        диабасе(PIN[i])
    циа-текос

    тупысе(EOLN,EOLN,"аЯВИЙЭР ПъМАЙАР: ")
    тупысе(EOLN,"PIN=[")
    циа i:=1 еыс N епамакабе
        тупысе(PIN[i], " ")
    циа-текос
    тупысе("]")

    циа i:=1 еыс N епамакабе
        PIN[i]:=2*PIN[i]
    циа-текос
    
    тупысе("тЕКИЙЭР пИМАЙэР: ")
    циа i:=1 еыс N епамакабе
        тупысе(EOLN,"PIN,[",i,"]=",PIN[i])
    циа-текос

    
текос